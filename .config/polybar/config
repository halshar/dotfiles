[module/modes]
type                                    =   internal/bspwm
format                                  =   <label-mode>

label-sticky                            =   " Sticky "
label-sticky-foreground                 =   ${colors.foreground}
label-sticky-background                 =   ${colors.background-alt}

label-private                           =   " Private "
label-private-foreground                =   ${colors.foreground}
label-private-background                =   ${colors.background-alt}

label-locked                            =   " Locked "
label-locked-foreground                 =   ${colors.foreground}
label-locked-background                 =   ${colors.background-alt}

label-marked                            =   " Marked "
label-marked-foreground                 =   ${colors.foreground}
label-marked-background                 =   ${colors.background-alt}

[module/eth-up]
type                                    =   internal/network
interface                               =   eno1
interval                                =   3

format-connected-prefix                 =   "  "

label-connected                         =   %upspeed%
label-disconnected                      =   "  "

[module/eth-down]
type                                    =   internal/network
interface                               =   eno1
interval                                =   3

format-connected-prefix                 =   "  "

label-connected                         =   %downspeed%
label-disconnected                      =   "  "

[module/check_update]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/updates_arch_combined.sh"

label                                   =   "%output%"
format-prefix                           =   "  "
format-prefix-foreground                =   #FF7400

interval                                =   7200

[module/fs]
type                                    =   internal/fs
mount-0                                 =   /home

format-mounted-prefix                   =   "  "
format-mounted-prefix-foreground        =   #7289DA
label-mounted                           =   %free%

interval                                =   7200

[module/cpu]
type                                    =   internal/cpu
label                                   =   %percentage%%

format                                  =   <label>
format-prefix                           =   "  "

interval                                =   5

[module/memory]
type                                    =   internal/memory
label                                   =   %gb_used%/%gb_total%

format                                  =   <label>
format-prefix                           =   "  "

interval                                =   5

[module/temperature]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/temperature.sh"

label                                   =   "%output%"
format-prefix                           =   "  "
format-prefix-foreground                =   #FF0000

interval                                =   5

[module/battery]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/battery.sh"

label                                   =   "%output%"

interval                                =   5

[module/backlight]
type                                    =   custom/ipc
hook-0                                  =   "light -G | sed 's/\.[0-9]*//'"

format-prefix                           =   "  "
format-prefix-foreground                =   #FFF000

initial                                 =   1

[module/volume]
type                                    =   custom/ipc
hook-0                                  =   "~/.config/polybar/scripts/display_volume.sh"

format-prefix                           =   "  "
format-prefix-foreground                =   #00FFFF

initial                                 =   1


[module/date]
type                                    =   internal/date
label                                   =   %date% %time%

date                                    =   %a %d %b
time                                    =   %H:%M

format-prefix                           =   "  "
format-prefix-foreground                =   #00FF00

interval                                =   10

[settings]
screenchange-reload                     =   true

[global/wm]
margin-top                              =   0
margin-bottom                           =   0


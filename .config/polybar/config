[colors]
foreground                              =   #F8F8F2
foreground-alt                          =   #FF79C6

background                              =   #282A36
background-alt                          =   #BD93F9

primary                                 =   #9AEDFE
alert                                   =   #EC5F67

[bar/mybar]
width                                   =   100%
height                                  =   24
fixed-center                            =   true
radius                                  =   0.0

wm-restack                              =   bspwm
override-redirect                       =   true
enable-ipc                              =   true
bottom                                  =   false
separator                               =   " "

background                              =   ${colors.background}
foreground                              =   ${colors.foreground}

font-0                                  =   "Hack Nerd Font Mono:style=Bold:size=10;2"
font-1                                  =   "Feather:style=Regular;2"

modules-left                            =   bspwm modes
modules-right                           =   fs temperature battery backlight volume date

tray-position                           =   right
tray-padding                            =   1
tray-maxsize                            =   16
tray-scale                              =   1.0

cursor-click                            =   pointer
cursor-scroll                           =   ns-resize

[module/xwindow]
type                                    =   internal/xwindow
label                                   =   %title%

[module/bspwm]
type                                    =   internal/bspwm

label-focused                           =   %icon%
label-focused-foreground                =   ${colors.background}
label-focused-background                =   ${colors.background-alt}
label-focused-padding                   =   1


label-occupied                          =   %icon%
label-occupied-padding                  =   1
label-occupied-foreground               =   ${colors.foreground-alt}

label-urgent                            =   %icon%!
label-urgent-background                 =   ${colors.alert}
label-urgent-padding                    =   1

label-empty                             =   %icon%
label-empty-padding                     =   1

